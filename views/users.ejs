<!DOCTYPE html>
<html>
<head>
  <title>Usuários</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .container {
      max-width: 600px;
      width: 100%;
      margin-bottom: 20px;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .user-list {
      list-style-type: none;
      padding: 0;
    }

    .user-item {
      background-color: #fff;
      border-radius: 5px;
      padding: 15px;
      margin-bottom: 10px;
    }

    .user-name {
      font-weight: bold;
    }

    .button-container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .button-container form {
      margin-bottom: 10px;
    }

    .button {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      width: 200px;
    }

    .button:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="header">Lista de Usuários</h1>
    <ul class="user-list">
      <% users.forEach(function(user) { %>
        <li class="user-item">
          <span class="user-name">Nome: <%= user.name %></span><br>
          <span class="user-email">E-mail: <%= user.email %></span><br>
          <span class="user-status">Status: <%= user.active ? 'Ativo' : 'Desativado' %></span><br>
        </li>
      <% }) %>
    </ul>
  </div>

  <div class="button-container">
    <form action="/" method="get">
        <button class="button" type="submit">Go home</button>
    </form>

    <form action="/profile" method="get">
        <button class="button" type="submit">See your profile</button>
    </form>

    <form action="/developed" method="get">
        <button class="button" type="submit">See developer</button>
    </form>
    
    <form action="/logout?_method=DELETE" method="post">
        <button class="button" type="submit">Logout</button>
    </form>
  </div>
</body>
</html>
